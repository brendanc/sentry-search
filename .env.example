# Sentry Configuration
# Copy this file to .env and fill in your values

# Your Sentry authentication token
# Generate at: https://your-org.sentry.io/settings/auth-tokens/
SENTRY_TOKEN=your_token_here

# Your Sentry instance base URL (e.g., https://your-org.sentry.io)
SENTRY_BASE_URL=https://your-org.sentry.io

# Your Sentry organization slug
ORG=your-org-slug

# Your Sentry project ID (numeric)
PROJECT_ID=your-project-id

# Your Sentry project slug
PROJECT_SLUG=your-project-slug

# Discover query to filter events (e.g., issue:YOUR-ISSUE-ID or tags[environment]:production)
DISCOVER_QUERY=issue:YOUR-ISSUE-ID

# Time period for event search (e.g., 6d, 30d, 90d)
STATS_PERIOD=10d

# Maximum number of events to fetch (safety limit)
MAX_EVENTS=500

# Optional: Search configuration defaults
# PROP_PATH=your.custom.prop.path
# VALUE_FILTER=
# CASE_SENSITIVE=true
# OUTPUT_FORMAT=table
